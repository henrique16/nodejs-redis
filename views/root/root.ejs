<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <% if (eventsByUser.length > 0) { %>
    <h2>Event By User <%= eventsByUser[0].idUser %></h2>
    <div id="eventsByUser">
        <% for (let index = 0; index < eventsByUser.length; index++) { %>
        <% const eventByUser = eventsByUser[index] %>
        <%- include("../component/eventByUser.ejs", { eventByUser: eventByUser }) %>
        <% } %>
    </div>
    <% } %>

    <% if(events.length > 0) { %>
    <h2>Event</h2>
    <div id="events">
        <% for (let index = 0; index < events.length; index++) { %>
        <% const event = events[index] %>
        <%- include("../component/event.ejs", { event: event }) %>
        <% } %>
    </div>
    <% } %>

    <div>
        <input id="renderCreateEvent" type="submit" value="Create event" onclick="renderCreateEvent()">
        <input type="submit" value="set id user" onclick="setIdUser()">
    </div>
    <%- include("script.ejs") %>
</body>

</html>